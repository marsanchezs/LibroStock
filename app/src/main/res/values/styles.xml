<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imagen_boton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- TOOLBAR -->
    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/mrsmonster</item>
        <item name="android:textColorSecondary">@color/colorMenu</item>
        <item name="android:textColor">@color/colorMenu</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- PESTAÃ‘AS -->
    <style name="tabs" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mrsmonster</item>
    </style>

    <!-- BOTONES -->
    <style name="boton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/mrsmonster</item>
    </style>

    <!-- TEXTOS -->
    <style name="texto">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorLetra</item>
        <item name="android:textColorHint">@color/colorLetra</item>
        <item name="android:fontFamily">@font/mrsmonster</item>
    </style>

    <!-- CABECERAS -->
    <style name="cabeceras">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorFondo</item>
        <item name="android:fontFamily">@font/mrsmonster</item>
    </style>

    <!-- ESPACIOS -->
    <style name="espacio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="espacio2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="AppTheme.TemaPopup">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>