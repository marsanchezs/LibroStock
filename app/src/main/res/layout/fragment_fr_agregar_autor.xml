<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoAgregarAutor"
    tools:context=".Fragments.frAgregarAutor">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_autor">

            <EditText
                android:id="@+id/edtNombreAutorFRAA"
                style="@style/texto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/nombreAutor"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/colorLetraAgregarAutor"
                android:textColorHint="@color/colorLetraAgregarAutor"
                android:imeOptions="actionNext"
                app:backgroundTint="@color/colorLetraAgregarAutor"
                tools:ignore="Autofill" />

            <ImageView
                android:id="@+id/imgLimpiarNombreFRAA"
                style="@style/imagen_boton"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="@string/icono"
                android:visibility="gone"
                android:onClick="limpiarValeTipo"
                app:srcCompat="@drawable/icono_cancelar_fraa" />
        </FrameLayout>

        <Space style="@style/espacio" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_autor">

            <EditText
                android:id="@+id/edtApellidoAutorFRAA"
                style="@style/texto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/apellidoAutor"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/colorLetraAgregarAutor"
                android:textColorHint="@color/colorLetraAgregarAutor"
                android:imeOptions="actionNext"
                app:backgroundTint="@color/colorLetraAgregarAutor"
                tools:ignore="Autofill" />

            <ImageView
                android:id="@+id/imgLimpiarApellidoFRAA"
                style="@style/imagen_boton"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="@string/icono"
                android:visibility="gone"
                android:onClick="limpiarValeTipo"
                app:srcCompat="@drawable/icono_cancelar_fraa" />
        </FrameLayout>

        <Space style="@style/espacio" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_autor">

            <AutoCompleteTextView
                android:id="@+id/edtPaisAutorFRAA"
                style="@style/texto"
                android:entries="@array/paises"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/paisAutor"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/colorLetraAgregarAutor"
                android:textColorHint="@color/colorLetraAgregarAutor"
                android:imeOptions="actionNext"
                app:backgroundTint="@color/colorLetraAgregarAutor"
                tools:ignore="Autofill" />

            <ImageView
                android:id="@+id/imgLimpiarPaisFRAA"
                style="@style/imagen_boton"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="@string/icono"
                android:visibility="gone"
                android:onClick="limpiarValeTipo"
                app:srcCompat="@drawable/icono_cancelar_fraa" />
        </FrameLayout>

    </LinearLayout>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnAgregarFRAA"
            android:background="@color/colorBotonAgregarAutor"
            style="@style/boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorLetraAgregarAutor"
            android:text="@string/agregar" />

    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>