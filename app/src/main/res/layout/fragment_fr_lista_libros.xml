<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoListaLibros"
    tools:context=".Fragments.frListaLibros">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_lista_libro">

            <AutoCompleteTextView
                android:id="@+id/edtBuscarFRLL"
                style="@style/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tituloLibro"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/colorLetraListaLibro"
                android:textColorHint="@color/colorLetraListaLibro"
                app:backgroundTint="@color/colorLetraListaLibro"
                tools:ignore="Autofill" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:background="@color/colorBotonListaLibro"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/icono"
                    android:src="@drawable/icono_buscar4" />
            </TableRow>

        </TableRow>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="316dp">

            <ListView
                android:id="@+id/lvListaLibrosFRLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>